module purge

# compilateur utilisé
FC=gfortran

if [[ $FC = "ifort" ]]
then 
  # cas intel 15
#    module load intel/15.0.0.090
#    module load impi/5.0.1.035
##    module load openmpi/3.1.0/intel-15.0.0.090
