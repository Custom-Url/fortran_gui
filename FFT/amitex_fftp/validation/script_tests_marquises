  # cas gnu 920 (temporaire : decommenter les lignes ci-dessous et conserver gnu810)
    #module unload gcc/8.1.0
    #module load gcc/9.2.0

  # cas gnu 485 (base centos)
    # module load openmpi/3.1.0/gcc-4.8.5
    # module load tfel/3.1.2/gcc-4.8.5
else
    echo Fortran compiler not set
    exit 1
fi

  cd /u/q/dg765/amitex_fftp/validation

module list
 ./script_tests.sh
